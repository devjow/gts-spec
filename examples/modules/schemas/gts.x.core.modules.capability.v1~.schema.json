{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.core.modules.capability.v1~",
  "description": "Base schema for any application modules capabilities",
  "required": ["description", "id"],
  "properties": {
    "id": {
      "type": "string",
      "x-gts-ref": "/$id"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "additionalProperties": false
  }
}
